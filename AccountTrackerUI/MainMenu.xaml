<Window x:Class="AccountTrackerUI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountTrackerUI"
        mc:Ignorable="d"
        Title="Main Menu" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Name="lblAmount" Grid.Row="0" Content="Some placeholder text...." HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="btnAdd10" Grid.Row="1" Content="Add £10.00" Background="BlanchedAlmond" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Click="btnAdd10_Click"/>
    </Grid>
</Window>
